# Synth-AI Environment Variables Example
# Copy this file to .env and update with your values

# Turso Database Configuration for Embedded Replicas
# The local database URL (used by async SQLAlchemy)
TURSO_LOCAL_DB_URL=sqlite+aiosqlite:///embedded.db

# Remote Turso database URL for synchronization
# Get this from: turso db show <your-db-name> --url
TURSO_DATABASE_URL=libsql://your-database.turso.io

# Authentication token for Turso
# Get this from: turso db tokens create <your-db-name>
TURSO_AUTH_TOKEN=your-auth-token-here

# How often to sync with remote database (in seconds)
# Default: 2 seconds for responsive local development
# For production, consider 10-30 seconds to reduce network overhead
TURSO_SYNC_SECONDS=2

# Connection pool settings
TURSO_POOL_SIZE=8
TURSO_MAX_OVERFLOW=16
TURSO_POOL_TIMEOUT=30.0
TURSO_POOL_RECYCLE=3600

# SQLite settings
TURSO_FOREIGN_KEYS=true
TURSO_JOURNAL_MODE=WAL

# Performance settings
TURSO_ECHO_SQL=false
TURSO_BATCH_SIZE=1000

# Sqld daemon settings (if using sqld sidecar instead of Python sync)
USE_SQLD_REPLICA=false
SQLD_BINARY=sqld
SQLD_DB_PATH=traces.db
SQLD_HTTP_PORT=8080
SQLD_IDLE_SHUTDOWN=0

# Environment service settings
SYNTH_LOGGING=true