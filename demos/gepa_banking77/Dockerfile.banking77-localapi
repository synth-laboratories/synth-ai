# Dockerfile for Banking77 LocalAPI (deploy via Synth Harbor)
FROM python:3.11-slim

WORKDIR /app

# Expect build context to be demos/gepa_banking77
COPY ./localapi_banking77.py /app/localapi_banking77.py
COPY ./harbor_localapi_runner.py /app/harbor_localapi_runner.py

RUN pip install --no-cache-dir fastapi uvicorn httpx datasets synth-ai

CMD ["python", "-m", "uvicorn", "localapi_banking77:app", "--host", "0.0.0.0", "--port", "8000"]
